{
  "$schema": "https://railway.app/schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "startCommand": "npm run build && caddy file-server --root dist --listen :8080",
    "restartPolicyMaxRetries": 5,
    "restartPolicyWindow": 60,
    "healthchecks": {
      "enabled": true,
      "interval": 30,
      "timeout": 10
    }
  },
  "environments": {
    "production": {
      "nodeVersion": "20.11.0"
    }
  }
}
